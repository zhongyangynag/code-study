<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:rowCount="7"
    android:columnCount="4"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txt"
        android:text="0"
        android:layout_columnSpan="4"
        android:gravity="left"
        android:textSize="50dp"
        />
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="5dp"
        android:layout_columnSpan="4"
        android:background="@color/black"
        />
    <Button android:text="7" android:id="@+id/button7" android:textSize="26sp" android:layout_marginTop="10dp" android:layout_width="102dp"/>
    <Button android:text="8" android:id="@+id/button8" android:textSize="26sp" android:layout_marginTop="10dp" android:layout_width="102dp"/>
    <Button android:text="9" android:id="@+id/button9" android:textSize="26sp" android:layout_marginTop="10dp" android:layout_width="102dp"/>
    <Button android:text="/" android:id="@+id/buttoncu" android:textSize="26sp" android:layout_marginTop="10dp" android:layout_width="102dp"/>
    <Button android:text="4" android:id="@+id/button4" android:textSize="26sp" android:layout_width="102dp"/>
    <Button android:text="5" android:id="@+id/button5" android:textSize="26sp" android:layout_width="102dp"/>
    <Button android:text="6" android:id="@+id/button6" android:textSize="26sp" android:layout_width="102dp"/>
    <Button android:text="*" android:id="@+id/buttoncheng" android:textSize="26sp" android:layout_width="102dp"/>
    <Button android:text="1" android:id="@+id/button1" android:textSize="26sp" android:layout_width="102dp"/>
    <Button android:text="2" android:id="@+id/button2" android:textSize="26sp" android:layout_width="102dp"/>
    <Button android:text="3" android:id="@+id/button3" android:textSize="26sp" android:layout_width="102dp"/>
    <Button android:text="-" android:id="@+id/buttonjian" android:textSize="26sp" android:layout_width="102dp"/>
    <Button android:text="." android:id="@+id/buttonxiaoshu" android:textSize="26sp" android:layout_width="102dp"/>
    <Button android:text="0" android:id="@+id/button0" android:textSize="26sp" android:layout_width="102dp"/>
    <Button android:text="=" android:id="@+id/buttonecho" android:textSize="26sp" android:layout_width="102dp"/>
    <Button android:text="+" android:id="@+id/buttonjia" android:textSize="26sp" android:layout_width="102dp"/>
    <Button android:text="清零" android:id="@+id/buttonto0" android:layout_columnSpan="4" android:textSize="26sp" android:layout_width="fill_parent"/>

</GridLayout>