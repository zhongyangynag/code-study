<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:rowCount="6"
    android:columnCount="4"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_columnSpan="4"
        android:layout_marginLeft="4px"
        android:gravity="left"
        android:text="0"
        android:textSize="50dip"
        android:id="@+id/editText"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_columnSpan="4"
        android:text="清除"
        android:textSize="26sp"
        android:id="@+id/buttonClear">
    </Button>

    <Button android:id="@+id/button1" android:textSize="26sp" android:text="1"></Button>
    <Button android:id="@+id/button2" android:textSize="26sp" android:text="2"></Button>
    <Button android:id="@+id/button3" android:textSize="26sp" android:text="3"></Button>
    <Button android:id="@+id/buttonPlus" android:textSize="26sp" android:text="+"></Button>
    <Button android:id="@+id/button4" android:textSize="26sp" android:text="4"></Button>
    <Button android:id="@+id/button5" android:textSize="26sp" android:text="5"></Button>
    <Button android:id="@+id/button6" android:textSize="26sp" android:text="6"></Button>
    <Button android:id="@+id/buttonMinus" android:textSize="26sp" android:text="-"></Button>
    <Button android:id="@+id/button7" android:textSize="26sp" android:text="7"></Button>
    <Button android:id="@+id/button8" android:textSize="26sp" android:text="8"></Button>
    <Button android:id="@+id/button9" android:textSize="26sp" android:text="9"></Button>
    <Button android:id="@+id/buttonMultiply" android:textSize="26sp" android:text="*"></Button>
    <Button android:id="@+id/buttonPoint" android:textSize="26sp" android:text="."></Button>
    <Button android:id="@+id/button0" android:textSize="26sp" android:text="0"></Button>
    <Button android:id="@+id/buttonEqual" android:textSize="26sp" android:text="="></Button>
    <Button android:id="@+id/buttonDivide" android:textSize="26sp" android:text="/"></Button>
</GridLayout>